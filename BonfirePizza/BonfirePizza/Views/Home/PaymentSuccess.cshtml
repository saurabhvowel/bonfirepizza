@model BonfirePizza.Models.Home

@{
    ViewBag.Title = "PaymentSuccess";
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <style>
        table, th, td {
            border: 2px solid black;
        }
    </style>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="../assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="../assets/css/style.css" rel="stylesheet">
    <link href="~/Thankyou/css/thanku.css" rel="stylesheet" />
    <link href="~/Thankyou/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>


    <title>Payment Status</title>
</head>

<body>
    <div class="content">
        <div class="wrapper-1">
            <div class="wrapper-2">
                <div class="logo text-center mt-4">
                    <img src="../assets/images/bonfire_logo_text_compressed.png" class="img-fluid" alt="logo" />
                </div>
                <br />
                <p><b>Thank You for choosing us.</b></p>
                <p style="color:red;">Please check your mail for order confirmation.</p>
                <table class="table table-bordered">
                    <thead>
                        <tr class="text-center">
                            <th>Mobile No</th>
                            <th>Order No</th>
                            <th style="color:green;">Transaction Id</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr class="text-center">

                            <td data-label="Customer Mobile">
                                <span data-currency-usd=" @Model.MobileNo"> @Model.MobileNo</span>
                            </td>
                            <td data-label="Order No">
                                <span data-currency-usd="@Model.OrderNo"> @Model.OrderNo</span>
                            </td>
                            <td data-label="Transaction Id" style="color:green;>
                                <span data-currency-usd=" @Model.PaymentID">  @Model.PaymentID</span>
                            </td>

                        </tr>
                    </tbody>
                </table>
                <small> (If Transaction Id is blank means, we didn't receive money. So please check.)</small>
                <br />
                <br />
                <p>
                    Call us on:
                    <a href="tel:09650672515" target="_blank">
                        9650672515
                    </a>
                </p>
                <p>
                    E-mail:
                    <a href="mailto:order@bonfirepizzapoint.com" target="_blank">
                        order@bonfirepizzapoint.com
                    </a>
                </p>
                <div class="home_btn">
                    <a href="/Home/Index" class="go-home">Go back to Menu Home</a>
                </div>
            </div>
        </div>
    </div>

    <script src="../assets/js/bootstrap.min.js"></script>
</body>
</html>


